  "fixed_size_chunking_cases": [
    {
      "case_id": "fixed_001",
      "description": "Fixed size chunking con configuración estándar",
      "parameters": {
        "chunking_strategy": "fixed_size",
        "chunk_size": 800,
        "chunk_overlap": 150,
        "fixed_size_separators": ["\n\n", "\n", " ", ""],
        "fixed_size_keep_separator": true,
        "fixed_size_strip_whitespace": true,
        "fixed_size_length_function": "character_count",
        "fixed_size_min_chunk_size": 100,
        "fixed_size_max_chunk_size": 1200
      },
      "expected_results": {
        "avg_chunk_size": 800,
        "chunk_size_range": [750, 850],
        "overlap_size": 150,
        "separators_used": ["\n\n", "\n", " ", ""]
      },
      "reproducibility": {
        "seed": 42,
        "deterministic": true,
        "expected_chunks_per_doc": 6
      }
    },
    {
      "case_id": "fixed_002",
      "description": "Fixed size chunking con separadores personalizados",
      "parameters": {
