{
  "ragas_configuration": {
    "description": "Configuración completa RAGAS para métodos Semantic y Fixed Size",
    "version": "1.0",
    "evaluation_date": "2025-01-15"
  },
  
  "semantic_chunking_cases": [
    {
      "case_id": "semantic_001",
      "description": "Semantic chunking con configuración estándar",
      "parameters": {
        "chunking_strategy": "semantic",
        "breakpoint_threshold_type": "percentile",
        "breakpoint_threshold_amount": 95,
        "semantic_embeddings_model": "models/embedding-001",
        "semantic_similarity_threshold": 0.7,
        "semantic_min_chunk_size": 200,
        "semantic_max_chunk_size": 2000
      },
      "expected_results": {
        "avg_chunk_size": 800,
        "chunk_size_range": [200, 2000],
        "similarity_threshold": 0.7,
        "embeddings_model": "models/embedding-001"
      },
      "reproducibility": {
        "seed": 42,
        "deterministic": true,
        "expected_chunks_per_doc": 5
      }
    },
    {
      "case_id": "semantic_002", 
      "description": "Semantic chunking con umbrales estrictos",
      "parameters": {
        "chunking_strategy": "semantic",
        "breakpoint_threshold_type": "standard_deviation",
        "breakpoint_threshold_amount": 2.0,
        "semantic_embeddings_model": "models/embedding-001",
